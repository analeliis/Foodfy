{% extends "layout.njk" %}

{% block title %}
  <title>Receitas Detalhes</title>
{% endblock title %}

{% block styles %}
  <link rel="stylesheet" href="/styles/recipes.css">
{% endblock styles %}

{% block content %}

  <main>

    <div class="recipes-details">
      <img src="{{recipes.image}}" alt="{{recipes.title}}">
      <h1>{{recipes.title}}</h1>
      <h3>por
        {{recipes.author}}</h2>

      <div class="recipes-content">
        <div class="recipes-content-title">
          <h2>Ingredientes</h2>
          <a class="hide">ESCONDER</a>
        </div>

        <div class="info">
          <ul>
            {% for list in recipes.ingredients %}
              <li>{{list}}</li>
            {% endfor %}
          </ul>
        </div>
        <div class="recipes-content-title">
          <h2>Modo de Preparo</h2>
          <a class="hide">ESCONDER</a>
        </div>

        <div class="info">
          <p>
            {% for prepare in recipes.preparation %}
              {{prepare}}
            {% endfor %}
          </p>

        </div>
        <div class="recipes-content-title">
          <h2>Informações Adicionais</h2>
          <a class="hide">ESCONDER</a>
        </div>

        <div class="info">
          <p>{{recipes.information}}</p>
        </div>

      </div>

    </div>

  </main>

  <script src="/scripsts/script.js"></script>

{% endblock content %}